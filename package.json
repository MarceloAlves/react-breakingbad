{
  "name": "react-breakingbad",
  "version": "0.1.1",
  "main": "dist/index.js",
  "module": "dist/breakingbad.esm.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "url": "git://github.com/marceloalves/react-breakingbad.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build:js": "tsdx build",
    "build:css": "node-sass --output-style compressed --output dist src/index.scss",
    "test": "tsdx test --env=jsdom",
    "lint": "tsdx lint"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.8.5",
    "cz-conventional-changelog": "3.0.2",
    "husky": "^3.0.3",
    "node-sass": "^4.13.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "tsdx": "^0.8.0",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
